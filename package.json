{
    "name": "@purinton/signals",
    "type": "module",
    "version": "1.0.14",
    "description": "Graceful shutdown signal handler utility for Node.js (ESM and CommonJS)",
    "main": "index.cjs",
    "module": "index.mjs",
    "types": "index.d.ts",
    "files": [
        "index.mjs",
        "index.cjs",
        "index.d.ts",
        "README.md",
        "LICENSE"
    ],
    "exports": {
        ".": {
            "import": "./index.mjs",
            "require": "./index.cjs",
            "types": "./index.d.ts"
        }
    },
    "scripts": {
        "test": "npx --node-options=\"--experimental-vm-modules --no-warnings\" jest --detectOpenHandles --silent"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/purinton/signals.git"
    },
    "keywords": [
        "nodejs",
        "signals",
        "shutdown",
        "graceful shutdown",
        "process",
        "handler",
        "utility",
        "esm",
        "commonjs",
        "cjs",
        "package",
        "library",
        "npm",
        "node",
        "logger"
    ],
    "author": "Russell Purinton <russell@purinton.us>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/purinton/signals/issues"
    },
    "homepage": "https://github.com/purinton/signals#readme",
    "devDependencies": {
        "jest": "^30.0.0"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/?(*.)+(spec|test).[jt]s?(x)",
            "**/?(*.)+(spec|test).mjs",
            "**/?(*.)+(spec|test).cjs"
        ]
    },
    "dependencies": {
        "@purinton/log": "^1.0.11"
    }
}